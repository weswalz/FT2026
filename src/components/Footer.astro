---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { name: 'Menus', href: '/menu' },
  { name: 'Private Events', href: '/private-events' },
  { name: 'Gift Cards', href: '/giftcards' },
  { name: 'Our Story', href: '/ourstory' }
];

const legal = [
  { name: 'Policies', href: '/policies' },
  { name: 'Contact Us', href: '/contact' },
  { name: 'Location', href: '/location' }
];
---

<footer class="bg-midnight text-white coastal-texture">
  <div class="container-custom">
    <!-- Main Footer Content -->
    <div class="py-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand Section -->
      <div class="lg:col-span-2">
        <a href="/" class="inline-block mb-6">
          <div class="text-3xl font-heading font-bold">
            Field <span class="text-champagne">&</span> Tides
          </div>
        </a>
        <p class="text-white/80 mb-6 max-w-md leading-relaxed">
          Located in Houston's historic Heights neighborhood, Field & Tides features an open canvas menu reflecting
          Executive Chef Travis Lenig's culinary experiences.
        </p>
        <div class="flex items-center space-x-4">
          <a
            href="https://facebook.com/fieldandtides"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-white/10 hover:bg-champagne/20 flex items-center justify-center transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
            </svg>
          </a>
          <a
            href="https://instagram.com/fieldandtides"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-white/10 hover:bg-champagne/20 flex items-center justify-center transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-heading text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-3">
          {quickLinks.map(link => (
            <li>
              <a
                href={link.href}
                class="text-white/70 hover:text-champagne transition-colors link-underline"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Hours & Contact -->
      <div>
        <h4 class="font-heading text-lg font-semibold mb-4">Hours</h4>
        <div class="space-y-2 text-white/70 text-sm">
          <div>
            <div class="font-medium text-white">Lunch</div>
            <div>Wed - Sun: 11am - 3pm</div>
          </div>
          <div>
            <div class="font-medium text-white">Dinner</div>
            <div>Tue - Sun: 5pm - 10pm</div>
          </div>
          <div>
            <div class="font-medium text-white">Brunch</div>
            <div>Sat - Sun: 10am - 3pm</div>
          </div>
        </div>
        <div class="mt-6">
          <a
            href="mailto:info@fieldandtides.com"
            class="text-white/70 hover:text-champagne transition-colors link-underline text-sm"
          >
            info@fieldandtides.com
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-white/60 text-sm">
          &copy; {currentYear} Field & Tides Restaurant & Bar. All rights reserved.
        </div>
        <div class="flex items-center gap-6">
          {legal.map(link => (
            <a
              href={link.href}
              class="text-white/60 hover:text-champagne transition-colors text-sm"
            >
              {link.name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
