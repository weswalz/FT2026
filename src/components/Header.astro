---
// Header component with navigation
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-24">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <span class="text-2xl font-serif font-bold text-[#114C87]">Field & Tides</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/ourstory" class="text-gray-700 hover:text-[#114C87] transition-colors">Our Story</a>
        <a href="/menu" class="text-gray-700 hover:text-[#114C87] transition-colors">Menu</a>
        <a href="/private-events" class="text-gray-700 hover:text-[#114C87] transition-colors">Private Events</a>
        <a href="/location" class="text-gray-700 hover:text-[#114C87] transition-colors">Location</a>
        <a href="/contact" class="text-gray-700 hover:text-[#114C87] transition-colors">Contact</a>
        <a href="/giftcards" class="text-gray-700 hover:text-[#114C87] transition-colors">Gift Cards</a>
      </nav>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a
          href="https://www.opentable.com/field-and-tides"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 bg-[#F4E297] text-[#114C87] font-semibold rounded hover:bg-[#e5d388] transition-colors border border-[#114C87]"
        >
          Reserve
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-gray-700 hover:text-[#114C87]"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-4">
        <a href="/ourstory" class="text-gray-700 hover:text-[#114C87] transition-colors">Our Story</a>
        <a href="/menu" class="text-gray-700 hover:text-[#114C87] transition-colors">Menu</a>
        <a href="/private-events" class="text-gray-700 hover:text-[#114C87] transition-colors">Private Events</a>
        <a href="/location" class="text-gray-700 hover:text-[#114C87] transition-colors">Location</a>
        <a href="/contact" class="text-gray-700 hover:text-[#114C87] transition-colors">Contact</a>
        <a href="/giftcards" class="text-gray-700 hover:text-[#114C87] transition-colors">Gift Cards</a>
        <a
          href="https://www.opentable.com/field-and-tides"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 bg-[#F4E297] text-[#114C87] font-semibold rounded hover:bg-[#e5d388] transition-colors border border-[#114C87] text-center"
        >
          Reserve
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
