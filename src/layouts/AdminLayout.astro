  ]
} as const;

type IconName = keyof typeof iconPaths;
type NavSectionKey = 'dashboard' | 'menus' | 'events' | 'media' | 'pages' | 'settings' | 'activity';

interface NavItem {
  key: NavSectionKey;
  label: string;
  href: string;
  icon: IconName;
}

interface NavGroup {
  title: string;
  items: NavItem[];
}

const navGroups: NavGroup[] = [
  {
    title: 'Overview',
    items: [
      { key: 'dashboard', label: 'Dashboard', href: '/admin', icon: 'grid' }
    ]
  },
  {
    title: 'Content',
    items: [
      { key: 'menus', label: 'Menus', href: '/admin/menus', icon: 'bookOpen' },
      { key: 'events', label: 'Events', href: '/admin/events', icon: 'calendar' },
      { key: 'media', label: 'Media Gallery', href: '/admin/media', icon: 'gallery' },
      { key: 'pages', label: 'Pages', href: '/admin/pages', icon: 'document' }
    ]
  },
  {
    title: 'Configuration',
    items: [
      { key: 'settings', label: 'Settings', href: '/admin/settings', icon: 'cog' },
      { key: 'activity', label: 'Activity Log', href: '/admin/activity', icon: 'clipboard' }
    ]
  }
];

const props = Astro.props as {
  title?: string;
  section?: NavSectionKey;
  session?: { username: string; role?: string };
};

const {
  title = 'Admin',
  section = 'dashboard',
  session = { username: 'Admin', role: 'administrator' }
} = props;

const navLinkClasses = (key: NavSectionKey) =>
  key === section
    ? 'flex items-center gap-3 px-3 py-2.5 rounded-lg bg-champagne text-midnight font-semibold shadow-sm'
    : 'flex items-center gap-3 px-3 py-2.5 rounded-lg text-white/70 hover:text-white hover:bg-white/10 transition-colors';

const username = session?.username ?? 'Admin';
const role = session?.role ?? 'Administrator';
const initial = username.charAt(0).toUpperCase();
const hasActionsSlot = Astro.slots.has('actions');
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Field &amp; Tides Admin</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-slate-50">
    <div class="flex min-h-screen">
      <aside class="w-64 bg-field-navy flex flex-col shadow-xl">
        <div class="p-6 border-b border-white/10">
          <img src="/images/ft2023.svg" alt="Field &amp; Tides" class="h-12 w-auto brightness-0 invert" />
        </div>

        <nav class="flex-1 p-4 space-y-8">
          {navGroups.map((group) => (
            <div>
              <p class="text-xs font-semibold text-white/40 uppercase tracking-wider mb-3 px-3">{group.title}</p>
              <div class="space-y-1">
                {group.items.map((item) => (
                  <a href={item.href} class={navLinkClasses(item.key)}>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      {iconPaths[item.icon].map((d: string) => (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={d} />
                      ))}
                    </svg>
                    {item.label}
                  </a>
                ))}
              </div>
            </div>
          ))}
        </nav>

        <div class="p-4 border-t border-white/10">
          <form action="/admin/logout" method="post">
            <button type="submit" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-white/70 hover:text-white hover:bg-white/10 transition-colors w-full">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {iconPaths.logout.map((d: string) => (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={d} />
                ))}
              </svg>
              Logout
            </button>
          </form>
        </div>
      </aside>

      <div class="flex-1 flex flex-col">
        <header class="bg-white border-b border-slate-200 px-8 py-4 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between shadow-sm">
          <div>
            <p class="text-sm text-midnight/50">Field &amp; Tides Admin</p>
            <h1 class="text-2xl font-heading font-semibold text-midnight">{title}</h1>
          </div>
          <div class="flex flex-col gap-3 items-start sm:flex-row sm:items-center sm:justify-end sm:w-full lg:w-auto lg:gap-4">
            {hasActionsSlot && (
              <div class="flex items-center gap-2">
                <slot name="actions" />
              </div>
            )}
            <div class="flex items-center gap-3 pl-0 sm:pl-4 sm:border-l sm:border-slate-200">
              <div class="text-right">
                <p class="text-sm font-semibold text-midnight">{username}</p>
                <p class="text-xs text-midnight/50 capitalize">{role}</p>
              </div>
              <div class="w-9 h-9 rounded-full bg-field-navy text-white font-bold flex items-center justify-center">
                {initial}
              </div>
            </div>
          </div>
        </header>
        <main class="flex-1 overflow-y-auto bg-slate-50 p-8">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
