---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';

const features = [
  {
    title: 'Locally Sourced',
    description: 'Fresh ingredients from local farms and the Gulf',
    icon: 'üåæ'
  },
  {
    title: 'Seasonal Menus',
    description: 'Rotating selections that celebrate the seasons',
    icon: 'üçÇ'
  },
  {
    title: 'Expert Craft',
    description: 'Culinary artistry from Chef Travis Lenig',
    icon: 'üë®‚Äçüç≥'
  }
];
---

<BaseLayout
  title="Field & Tides Restaurant & Bar | Houston Heights"
  description="Coastal dining in Houston Heights featuring seasonal menus and fresh Gulf seafood."
>
  <!-- Hero Section -->
  <Hero
    title="Field & Tides"
    subtitle="Coastal Dining in the Heart of Houston Heights"
    image="/images/hero-home.jpg"
    height="large"
    overlay="medium"
    cta={{
      text: 'View Our Menus',
      href: '/menu',
      variant: 'secondary'
    }}
  />

  <!-- Welcome Section -->
  <section class="section bg-field-shell coastal-texture">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="mb-6 text-balance">Welcome to Field & Tides</h2>
        <p class="text-xl text-midnight/80 leading-relaxed mb-8">
          Located in Houston's historic Heights neighborhood, Field & Tides features an open canvas menu that reflects
          Executive Chef Travis Lenig's culinary experiences. Our cuisine draws from Southern, Italian, French, and Asian
          traditions, celebrating both land and sea.
        </p>
        <a href="/ourstory" class="btn btn-outline">
          Our Story
        </a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="section">
    <div class="container-custom">
      <div class="grid md:grid-cols-3 gap-12">
        {features.map(feature => (
          <div class="text-center fade-in">
            <div class="text-5xl mb-4">{feature.icon}</div>
            <h3 class="text-2xl font-heading font-semibold mb-3 text-field-navy">
              {feature.title}
            </h3>
            <p class="text-midnight/70 leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Menu Highlight Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="mb-4">Explore Our Menus</h2>
        <p class="text-xl text-midnight/70 max-w-2xl mx-auto">
          From brunch to dinner, happy hour to dessert cocktails, discover flavors that celebrate the best of field and tides.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {[
          { name: 'Dinner', href: '/menu-dinner', image: '/images/menu-dinner.jpg' },
          { name: 'Lunch', href: '/menu-lunch', image: '/images/menu-lunch.jpg' },
          { name: 'Brunch', href: '/menu-brunch', image: '/images/menu-brunch.jpg' },
          { name: 'Happy Hour', href: '/menu-happy-hour', image: '/images/menu-happy-hour.jpg' },
          { name: 'Wine', href: '/menu-wine', image: '/images/menu-wine.jpg' },
          { name: 'Cocktails', href: '/menu-cocktails-beer', image: '/images/menu-cocktails.jpg' }
        ].map(menu => (
          <a
            href={menu.href}
            class="card group hover:shadow-xl transition-all duration-300 overflow-hidden"
          >
            <div class="aspect-[4/3] overflow-hidden">
              <img
                src={menu.image}
                alt={menu.name}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              />
            </div>
            <div class="card-body text-center">
              <h3 class="text-xl font-heading font-semibold text-field-navy group-hover:text-field-copper transition-colors">
                {menu.name}
              </h3>
            </div>
          </a>
        ))}
      </div>

      <div class="text-center mt-12">
        <a href="/menu" class="btn btn-primary">
          View All Menus
        </a>
      </div>
    </div>
  </section>

  <!-- Private Events CTA -->
  <section class="section bg-gradient-to-br from-field-navy to-midnight text-white coastal-texture">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-white mb-6">Host Your Event With Us</h2>
        <p class="text-xl text-white/90 mb-8 leading-relaxed">
          From intimate gatherings to grand celebrations, Field & Tides provides the perfect setting for your special occasion.
        </p>
        <a href="/private-events" class="btn btn-secondary">
          Learn More About Private Events
        </a>
      </div>
    </div>
  </section>

  <!-- Location Preview -->
  <section class="section-sm">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="mb-6">Visit Us in the Heights</h2>
          <div class="space-y-4 text-midnight/80">
            <div>
              <h4 class="font-semibold text-field-navy mb-2">Hours</h4>
              <div class="space-y-1 text-sm">
                <p><strong>Lunch:</strong> Wed-Sun 11am-3pm</p>
                <p><strong>Dinner:</strong> Tue-Sun 5pm-10pm</p>
                <p><strong>Brunch:</strong> Sat-Sun 10am-3pm</p>
              </div>
            </div>
            <div>
              <h4 class="font-semibold text-field-navy mb-2">Location</h4>
              <p class="text-sm">Houston Heights<br>Houston, TX</p>
            </div>
          </div>
          <div class="mt-8 flex gap-4">
            <a href="/location" class="btn btn-primary">
              Get Directions
            </a>
            <a href="/contact" class="btn btn-outline">
              Contact Us
            </a>
          </div>
        </div>
        <div class="card overflow-hidden">
          <img
            src="/images/restaurant-interior.jpg"
            alt="Field & Tides Restaurant Interior"
            class="w-full h-full object-cover aspect-[4/3]"
          />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
