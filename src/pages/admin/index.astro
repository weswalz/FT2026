              <a href="/admin/pages" class="text-white/70 hover:text-white transition-colors">Pages</a>
            </nav>
          </div>
          <div class="flex items-center gap-4">
            <span class="text-sm text-white/80">Welcome, {session.username}</span>
            <form action="/admin/logout" method="post">
              <button type="submit" class="btn btn-secondary !py-2 !px-4 !text-sm">
                Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
