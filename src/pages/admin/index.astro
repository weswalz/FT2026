---
import { getSession } from '../../lib/auth.js';

export const prerender = false;

// Check authentication
const sessionId = Astro.cookies.get('session_id')?.value;
const session = sessionId ? getSession(sessionId) : null;

if (!session) {
  return Astro.redirect('/admin/login');
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard | Field & Tides</title>
  <link rel="stylesheet" href="/src/styles/global.css" />
</head>
<body class="bg-slate-100">
  <div class="min-h-screen">
    <!-- Admin Header -->
    <header class="bg-field-navy text-white shadow-lg">
      <div class="container-custom">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-8">
            <h1 class="text-xl font-heading font-bold">Field & Tides Admin</h1>
            <nav class="hidden md:flex gap-6">
              <a href="/admin" class="text-white/90 hover:text-white transition-colors">Dashboard</a>
