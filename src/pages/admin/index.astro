        ].map(stat => (
          <div class="card">
            <div class="card-body">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm text-midnight/60 mb-1">{stat.title}</p>
                  <p class="text-3xl font-bold text-field-navy">{stat.value}</p>
                </div>
                <div class="text-4xl">{stat.icon}</div>
              </div>
            </div>
          </div>
