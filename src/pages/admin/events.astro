---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getSession } from '../../lib/auth.js';

export const prerender = false;

const sessionId = Astro.cookies.get('session_id')?.value;
const session = sessionId ? getSession(sessionId) : null;

if (!session) {
  return Astro.redirect('/admin/login');
}

const upcomingEvents = [
  { title: 'Corporate Sunset Dinner', date: 'Nov 21, 2025', guests: 48, status: 'Confirmed', lead: 'Morgan Yates' },
  { title: 'Chef\'s Counter Experience', date: 'Nov 30, 2025', guests: 12, status: 'Planning', lead: 'Chef Team' },
  { title: 'Holiday Mixer – TGS', date: 'Dec 5, 2025', guests: 80, status: 'Proposal Sent', lead: 'Events Desk' }
];

const leadMetrics = [
  { label: 'New Leads', value: '5', delta: '+2 vs last week' },
  { label: 'Confirmed Events', value: '3', delta: 'Next 30 days' },
  { label: 'Avg Party Size', value: '42', delta: 'Private events' }
];

const submissions = [
  { company: 'St. Martin Bank', contact: 'Rachel Lee', eventDate: 'Dec 02', status: 'Proposal Sent', budget: '$8k' },
  { company: 'Bayou Bridal Party', contact: 'Ava Collins', eventDate: 'Dec 14', status: 'Reviewing', budget: '$5k' },
  { company: 'Memorial Luncheon', contact: 'James Porter', eventDate: 'Nov 18', status: 'Confirmed', budget: '$3.4k' },
  { company: 'Chef Collaboration', contact: 'Internal', eventDate: 'Jan 09', status: 'Planning', budget: 'N/A' }
];
---

<AdminLayout title="Events & Private Dining" section="events" session={session}>
  <Fragment slot="actions">
    <button class="px-4 py-2 rounded-lg bg-field-navy text-white font-semibold text-sm hover:bg-field-navy/90 transition-colors shadow-sm">
      + Log Event
    </button>
    <button class="px-4 py-2 rounded-lg bg-slate-100 text-midnight font-semibold text-sm hover:bg-slate-200 transition-colors border border-slate-200">
      Export CSV
    </button>
  </Fragment>

  <section class="grid grid-cols-1 gap-4 md:grid-cols-3 mb-8">
    {leadMetrics.map((metric) => (
      <div class="bg-white border border-slate-200 rounded-xl p-5 shadow-sm">
        <p class="text-sm text-midnight/60 font-medium">{metric.label}</p>
        <p class="text-3xl font-bold text-midnight mt-2">{metric.value}</p>
        <p class="text-xs text-midnight/50 mt-1">{metric.delta}</p>
      </div>
    ))}
  </section>

  <section class="grid grid-cols-1 gap-6 xl:grid-cols-3 mb-8">
    <div class="bg-white border border-slate-200 rounded-xl p-6 shadow-sm xl:col-span-2">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h2 class="text-lg font-semibold text-midnight">Upcoming Events</h2>
          <p class="text-sm text-midnight/60">Next 45 days</p>
        </div>
        <button class="px-4 py-2 rounded-lg bg-champagne text-midnight text-sm font-semibold hover:bg-champagne/90 transition-colors shadow-sm">
          View Calendar
        </button>
      </div>
      <ul class="space-y-4">
        {upcomingEvents.map((event) => (
          <li class="border border-slate-200 rounded-xl p-4 flex flex-col gap-3 lg:flex-row lg:items-center lg:justify-between">
            <div>
              <p class="text-midnight font-semibold">{event.title}</p>
              <p class="text-sm text-midnight/60">{event.date} • Lead: {event.lead}</p>
            </div>
            <div class="flex items-center gap-4">
              <span class="text-midnight/70 text-sm">{event.guests} guests</span>
              <span class={`inline-flex px-3 py-1 rounded-full text-xs font-semibold ${
                event.status === 'Confirmed'
                  ? 'bg-green-100 text-green-700 border border-green-200'
                  : event.status === 'Planning'
                    ? 'bg-blue-100 text-blue-700 border border-blue-200'
                    : 'bg-orange-100 text-orange-700 border border-orange-200'
              }`}>
                {event.status}
              </span>
            </div>
          </li>
        ))}
      </ul>
    </div>

    <div class="bg-white border border-slate-200 rounded-xl p-6 shadow-sm">
      <h2 class="text-lg font-semibold text-midnight mb-4">Reminders</h2>
      <div class="space-y-4">
        <div class="p-4 rounded-xl bg-field-navy/5 border border-field-navy/20">
          <p class="text-sm font-semibold text-field-navy">Holiday menu PDF</p>
          <p class="text-sm text-field-navy/70 mt-1">Upload before Nov 25 for gala inquiries.</p>
        </div>
        <div class="p-4 rounded-xl bg-champagne/20 border border-champagne/60">
          <p class="text-sm font-semibold text-midnight">n8n webhook audit</p>
          <p class="text-sm text-midnight/70 mt-1">Last retry succeeded 1h ago. Monitor queue.</p>
        </div>
        <div class="p-4 rounded-xl bg-slate-100 border border-slate-200">
          <p class="text-sm font-semibold text-midnight">Testimonials</p>
          <p class="text-sm text-midnight/60 mt-1">Add photos from last weekend\'s rehearsal dinner.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-white border border-slate-200 rounded-xl shadow-sm overflow-hidden">
    <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between px-6 py-4 border-b border-slate-200">
      <div>
        <h2 class="text-lg font-semibold text-midnight">Lead Inbox</h2>
        <p class="text-sm text-midnight/60">Contact + private dining submissions</p>
      </div>
      <div class="flex flex-wrap gap-2">
        <button class="px-4 py-2 rounded-lg bg-field-navy text-white text-sm font-semibold">All</button>
        <button class="px-4 py-2 rounded-lg bg-slate-100 text-midnight text-sm font-semibold border border-slate-200">New</button>
        <button class="px-4 py-2 rounded-lg bg-slate-100 text-midnight text-sm font-semibold border border-slate-200">Proposal</button>
        <button class="px-4 py-2 rounded-lg bg-slate-100 text-midnight text-sm font-semibold border border-slate-200">Closed</button>
      </div>
    </div>

    <table class="w-full">
      <thead class="bg-slate-50 border-b border-slate-200">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-bold text-midnight/70 uppercase tracking-wide">Company / Party</th>
          <th class="px-6 py-3 text-left text-xs font-bold text-midnight/70 uppercase tracking-wide">Contact</th>
          <th class="px-6 py-3 text-left text-xs font-bold text-midnight/70 uppercase tracking-wide">Event Date</th>
          <th class="px-6 py-3 text-left text-xs font-bold text-midnight/70 uppercase tracking-wide">Budget</th>
          <th class="px-6 py-3 text-left text-xs font-bold text-midnight/70 uppercase tracking-wide">Status</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-200">
        {submissions.map((submission) => (
          <tr class="hover:bg-slate-50 transition-colors">
            <td class="px-6 py-4 font-semibold text-midnight">{submission.company}</td>
            <td class="px-6 py-4 text-midnight/70">{submission.contact}</td>
            <td class="px-6 py-4 text-midnight/70">{submission.eventDate}</td>
            <td class="px-6 py-4 text-midnight/70">{submission.budget}</td>
            <td class="px-6 py-4">
              <span class={`inline-flex px-3 py-1 rounded-full text-xs font-semibold ${
                submission.status === 'Confirmed'
                  ? 'bg-green-100 text-green-700 border border-green-200'
                  : submission.status === 'Proposal Sent'
                    ? 'bg-blue-100 text-blue-700 border border-blue-200'
                    : 'bg-orange-100 text-orange-700 border border-orange-200'
              }`}>
                {submission.status}
              </span>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </section>
</AdminLayout>
