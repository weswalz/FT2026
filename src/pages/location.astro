---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout
  title="Location | Field & Tides"
  description="Visit Field & Tides in Houston's historic Heights neighborhood."
>
  <Hero
    title="Visit Us"
    subtitle="Houston Heights"
    image="/images/hero-location.jpg"
    height="small"
  />

  <section class="section">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Location Info -->
        <div>
          <h2 class="text-3xl font-heading font-semibold mb-6">Find Us</h2>

          <div class="space-y-8">
            <div>
              <h3 class="text-xl font-semibold text-field-navy mb-3">Address</h3>
              <p class="text-midnight/70">
                Houston Heights<br>
                Houston, TX
              </p>
              <a
                href="https://maps.google.com"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-field-navy hover:text-field-copper transition-colors mt-2"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Get Directions
              </a>
            </div>

            <div>
              <h3 class="text-xl font-semibold text-field-navy mb-3">Hours of Operation</h3>
              <div class="space-y-2 text-midnight/70">
                <div class="flex justify-between">
                  <span class="font-medium">Monday</span>
                  <span>Closed</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Tuesday</span>
                  <span>5pm - 10pm (Dinner)</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Wednesday - Friday</span>
                  <span>11am - 3pm, 5pm - 10pm</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Saturday</span>
                  <span>10am - 3pm, 5pm - 10pm</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Sunday</span>
                  <span>10am - 3pm, 5pm - 10pm</span>
                </div>
              </div>
            </div>

            <div>
              <h3 class="text-xl font-semibold text-field-navy mb-3">Contact</h3>
              <div class="space-y-2">
                <p>
                  <a href="tel:+15551234567" class="text-field-navy hover:text-field-copper transition-colors link-underline">
                    (555) 123-4567
                  </a>
                </p>
                <p>
                  <a href="mailto:info@fieldandtides.com" class="text-field-navy hover:text-field-copper transition-colors link-underline">
                    info@fieldandtides.com
                  </a>
                </p>
              </div>
            </div>

            <div>
              <h3 class="text-xl font-semibold text-field-navy mb-3">Parking</h3>
              <p class="text-midnight/70">
                Street parking is available on site. Additional parking can be found in the surrounding Heights area.
              </p>
            </div>
          </div>
        </div>

        <!-- Map Placeholder -->
        <div>
          <div class="card overflow-hidden h-full min-h-[500px]">
            <div class="w-full h-full bg-slate-200 flex items-center justify-center text-midnight/50">
              <div class="text-center">
                <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <p>Map integration coming soon</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
