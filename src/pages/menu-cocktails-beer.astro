---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import MenuSection from '../components/MenuSection.astro';
import { getMenuWithItems } from '../lib/menus.js';

const menu = getMenuWithItems('cocktails-beer');
---

<BaseLayout title="Cocktails & Beer | Field & Tides">
  <Hero
    title="Cocktails & Beer"
    subtitle="Craft cocktails and local brews"
    image="/images/hero-cocktails.jpg"
    height="small"
  />

  <section class="section">
    <div class="container-custom max-w-5xl">
      {menu ? (
        Object.entries(menu.sections).map(([sectionTitle, items]) => (
          <MenuSection title={sectionTitle} items={items} columns={2} />
        ))
      ) : (
        <div class="text-center py-12">
          <p class="text-xl text-midnight/70">Drink menu coming soon...</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
