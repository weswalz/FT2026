---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout
  title="Private Events | Field & Tides"
  description="Host your special event at Field & Tides. Perfect for corporate events, weddings, and celebrations."
>
  <Hero
    title="Private Events"
    subtitle="Create unforgettable memories at Field & Tides"
    image="/images/hero-private-events.jpg"
    height="medium"
    overlay="dark"
    cta={{
      text: 'Inquire About Your Event',
      href: '#inquiry-form',
      variant: 'secondary'
    }}
  />

  <section class="section">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="mb-6">Unforgettable Gatherings</h2>
        <p class="text-xl text-midnight/80 leading-relaxed">
          Whether you're planning an intimate dinner, corporate gathering, or grand celebration,
          Field & Tides provides the perfect backdrop for your special occasion.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 mb-16">
        {[
          {
            title: 'Intimate Dinners',
            description: 'Private dining for 10-20 guests with personalized menus',
            icon: 'ðŸ½ï¸'
          },
          {
            title: 'Corporate Events',
            description: 'Professional setting for meetings, celebrations, and networking',
            icon: 'ðŸ¤'
          },
          {
            title: 'Special Occasions',
            description: 'Weddings, anniversaries, birthdays, and milestone celebrations',
            icon: 'ðŸŽ‰'
          }
        ].map(item => (
          <div class="card text-center">
            <div class="card-body">
              <div class="text-5xl mb-4">{item.icon}</div>
              <h3 class="text-xl font-heading font-semibold mb-3 text-field-navy">
                {item.title}
              </h3>
              <p class="text-midnight/70">
                {item.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section bg-field-shell">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="mb-6">What We Offer</h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {[
            'Customized menus tailored to your event',
            'Full bar service with craft cocktails',
            'Flexible dining spaces for various group sizes',
            'Professional event planning assistance',
            'Audio/visual equipment available',
            'Dietary accommodations for all guests',
            'Dedicated event coordinator',
            'Beautiful coastal-inspired ambiance'
          ].map(feature => (
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-field-navy flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-midnight/80">{feature}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="section" id="inquiry-form">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <div class="card">
          <div class="card-body">
            <div class="text-center mb-8">
              <h2 class="mb-4">Inquire About Your Event</h2>
              <p class="text-midnight/70">
                Fill out the form below and our events team will get back to you within 24 hours.
              </p>
            </div>

            <ContactForm type="private-dining" />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
