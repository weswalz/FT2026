---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Page Not Found - Field & Tides Restaurant & Bar"
  description="The page you're looking for cannot be found."
  noIndex={true}
>
  <Header />

  <section class="py-24 bg-white min-h-[60vh] flex items-center">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <!-- 404 Icon -->
        <div class="mb-8">
          <svg class="w-32 h-32 mx-auto text-[#114C87]/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>

        <!-- 404 Text -->
        <h1 class="text-6xl font-serif font-bold text-[#114C87] mb-4">404</h1>
        <h2 class="text-3xl font-serif font-bold text-gray-900 mb-4">Page Not Found</h2>
        <p class="text-lg text-gray-600 mb-8">
          We're sorry, but the page you're looking for doesn't exist or has been moved.
        </p>

        <!-- Navigation Options -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/"
            class="inline-block px-8 py-3 bg-[#114C87] text-white font-semibold rounded hover:bg-[#0d3a67] transition-colors"
          >
            Go Home
          </a>
          <a
            href="/menu"
            class="inline-block px-8 py-3 bg-[#F4E297] text-[#114C87] font-semibold rounded hover:bg-[#e5d388] transition-colors border border-[#114C87]"
          >
            View Menus
          </a>
        </div>

        <!-- Quick Links -->
        <div class="mt-12 pt-8 border-t border-gray-200">
          <p class="text-gray-600 mb-4">Looking for something specific?</p>
          <div class="flex flex-wrap justify-center gap-4 text-sm">
            <a href="/ourstory" class="text-[#114C87] hover:underline">Our Story</a>
            <span class="text-gray-300">|</span>
            <a href="/menu" class="text-[#114C87] hover:underline">Menus</a>
            <span class="text-gray-300">|</span>
            <a href="/location" class="text-[#114C87] hover:underline">Location</a>
            <span class="text-gray-300">|</span>
            <a href="/contact" class="text-[#114C87] hover:underline">Contact</a>
            <span class="text-gray-300">|</span>
            <a href="/private-events" class="text-[#114C87] hover:underline">Private Events</a>
            <span class="text-gray-300">|</span>
            <a href="/giftcards" class="text-[#114C87] hover:underline">Gift Cards</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
